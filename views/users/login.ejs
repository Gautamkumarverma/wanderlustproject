<% layout("/layouts/boilerplate") %>

<div class="wrapper mt-3">
  <h2 class="col-6 offset-3">Login on Wanderlust</h2>
  <div class="col-6 offset-3">
    <form method="post" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="usename" class="form-table">Username</label>

        <input
          type="text"
          name="username"
          id="usename"
          class="form-control"
          required
        />
      </div>
      
      <div class="mb-3">
        <label for="password" class="form-table">Password</label>

        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
