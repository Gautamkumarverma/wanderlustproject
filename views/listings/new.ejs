     <form method="POST" action="/listings">
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" name="listing[title]" class="form-control" required>
          </div>
          <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control"></textarea>
          </div>
          <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input type="text" name="listing[image]" class="form-control">
          </div>
          <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input type="number" name="listing[price]" class="form-control">
          </div>
          <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="listing[location]" class="form-control">
          </div>
          <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input type="text" name="listing[country]" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Add Listing</button>
      </form>
      