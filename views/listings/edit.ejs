<% layout("/layouts/boilerplate") %> 
              <div class="row mt-3">
                     <div class="col-8 offset-2">
                            
                            <h3>Edit your listing</h3>
                            <form method="post" action="/listings/<%= listing.id %>?_method=PUT"  class="needs-validation" novalidate>
                                   <div class="mb-3">
                                          <label for="title" class="form-table">Title</label>
                                          <input type="text" name="listing[title]" value="<%= listing.title %>"
                                                 class="form-control" required>
                                                 <div class="invalid-feedback">
                                                        Please provide a Title.
                                                      </div>
                                   </div>

                                   <div class="mb-3">
                                          <label for="description" class="form-table">Description</label>
                                          <textarea rows="5" cols="30" name="listing[description]"
                                                 class="form-control" required > <%= listing.description %></textarea>
                                                 <div class="invalid-feedback">
                                                        Please enter atleast short Description !.
                                                      </div>
                                   </div>

                                   <div class="mb-3">
                                          <label for="image" class="form-table">Image</label>
                                          <input type="text" name="listing[image]" value="<%= listing.image %>"
                                                 class="form-control" required>
                                                 <div class="invalid-feedback">
                                                        Please enter Image Link/URL !.
                                                      </div>
                                   </div>
                                   <div class="row">
                                          <div class="mb-3 col-md-4">
                                                 <label for="price" class="form-table">Price</label>
                                                 <input type="number" name="listing[price]" value="<%= listing.price %>"
                                                        class="form-control" required>
                                                       
                                                        <div class="invalid-feedback">
                                                               Please enter valid price.
                                                             </div>  
                                          </div>
       
                                          <div class="mb-3 col-md-8">
                                                 <label for="country" class="form-table">Country</label>
                                                 <input type="text" name="listing[country]" value="<%= listing.country %>"
                                                        class="form-control" required>
                                                       
                                                        <div class="invalid-feedback">
                                                               Country name should be valid !.
                                                             </div>
                                          </div>
                                   </div>
                                  

                                   <div class="mb-3">
                                          <label for="location" class="form-table">Location</label>
                                          <input type="text" name="listing[location]" value="<%= listing.location %>"
                                                 class="form-control " required>
                                                 <div class="invalid-feedback">
                                                        Location name should be valid !.
                                                      </div>
                                   </div>

                                   <button class="btn btn-dark mt-3 edit-btn">Edit </button>
                                   <br><br>
                            </form>
                     </div>
</div>

  